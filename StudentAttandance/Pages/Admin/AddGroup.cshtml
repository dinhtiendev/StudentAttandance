@page "/addgroup"
@using Newtonsoft.Json
@using StudentAttandanceLibrary.Models
@model StudentAttandance.Pages.Admin.AddGroupModel
@{
    var account = HttpContext.Session.GetString("Account");
    //var teachers = ViewData["Teachers"] as List<Teacher>;
    var terms = ViewData["Terms"] as List<Term>;
    var courses = ViewData["Course"] as List<Course>;
    //var rooms = ViewData["Rooms"] as List<Room>;
    //var slots = ViewData["Slots"] as List<TimeSlot>;
    var ks = ViewData["KS"] as List<string>;
}
<div class="row bg-light p-3">
    <div class="col-md-4 d-flex justify-content-start">
        <h6><a class="text-decoration-none" href="/home">Home</a><span> | Add Group</span></h6>
    </div>
    <div class="col-md-8 d-flex justify-content-end">
        <a class="text-decoration-none" href="#">
            <span class="private-information text-light p-1 rounded-2"> @(JsonConvert.DeserializeObject<Account>(account.ToString()).AccountId)</span>
        </a> &nbsp;|&nbsp;
        <a class="text-decoration-none" href="#">
            <span class="private-information text-light p-1 rounded-2">logout</span>
        </a> &nbsp;|&nbsp;
        <a class="text-decoration-none">
            <span class="private-information text-light p-1 rounded-2">
                CAMPUS:
                FPTU-Hòa Lạc
            </span>
        </a>
    </div>
</div>
<div class="row my-4">
    <div class="col-md-2 my-2">
        <i class='fa fa-angle-left' style='font-size:20px'></i>
        <a class="" href="/groupmanagement" style="font-size: 20px;">Back</a>
    </div>
    <div class="col-md-8">
        <h1 class="text-center py-1 rounded">Add Groups</h1>
    </div>
    <div class="col-md-2">
    </div>
</div>
<div class="my-4">
</div>
<form method="post" enctype="multipart/form-data">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Date Start:</label>
        <div class="col-sm-4">
            <input name="AddGroupValidation.DateStart" type="date" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Number of Slot:</label>
        <div class="col-sm-4">
            <input name="AddGroupValidation.NumberSlot" min="1" type="number" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <label class="col-form-label">K: </label>
        </div>
        <div class="col-sm-4">
            <select name="AddGroupValidation.KS" class="form-select form-select-dm" aria-label=".form-select-dm example">
                @foreach (var i in ks)
                {
                    <option value="@i">@i</option>
                }
            </select>
        </div>
    </div>
    @*<div class="form-group row">
        <div class="col-sm-2">
            <label class="col-form-label">Teacher: </label>
        </div>
        <div class="col-sm-4">
            <select name="AddGroupValidation.TeacherId" class="form-select form-select-dm" aria-label=".form-select-dm example">
                 @foreach (var i in teachers)
                {
                    <option value="@i.TeacherId">@i.UserName</option>
                }
            </select>
        </div>
    </div>*@
    <div class="form-group row">
        <div class="col-sm-2">
            <label class="col-form-label">Term: </label>
        </div>
        <div class="col-sm-4">
            <select name="AddGroupValidation.TermId" class="form-select form-select-dm" aria-label=".form-select-dm example">
                 @foreach (var i in terms)
                {
                    <option value="@i.TermId">@i.TermName</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <label class="col-form-label">Course: </label>
        </div>
        <div class="col-sm-4">
            <select name="AddGroupValidation.CourseId" class="form-select form-select-dm" aria-label=".form-select-dm example">
                 @foreach (var i in courses)
                {
                    <option value="@i.CourseId">@i.CourseName</option>
                }
            </select>
        </div>
    </div>
    @*<div class="form-group row">
        <div class="col-sm-2">
            <label class="col-form-label">Room: </label>
        </div>
        <div class="col-sm-4">
            <select name="AddGroupValidation.RoomId" class="form-select form-select-dm" aria-label=".form-select-dm example">
                 @foreach (var i in rooms)
                {
                    <option value="@i.RoomId">@i.RoomName</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <label class="col-form-label">Slot: </label>
        </div>
        <div class="col-sm-4">
            <select name="AddGroupValidation.SlotId" class="form-select form-select-dm" aria-label=".form-select-dm example">
                 @foreach (var i in slots)
                {
                    <option value="@i.TimeSlotId">@i.Description</option>
                }
            </select>
        </div>
    </div>*@
    <button type="submit" class="btn btn-success">Add</button>
</form>